<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:background="@color/primary_color">

    <!-- Contexte avec un arrière-plan de bordure arrondie -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <!-- Conteneur principal du widget -->
        <LinearLayout
            android:id="@+id/widget_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@drawable/button_background">

            <!-- Icône du cerveau -->
            <ImageView
                android:id="@+id/widget_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/ic_brain_logo_foreground" />

            <!-- Texte du bouton -->
            <!-- Permet au texte de remplir l'espace disponible -->
            <TextView
                android:id="@+id/widget_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Commencer un test"
                style="@style/WidgetTextStyle"
                android:gravity="center_vertical" />

            <!-- Flèche -->
            <ImageView
                android:id="@+id/widget_arrow"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/ic_arrow_widget_foreground" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
